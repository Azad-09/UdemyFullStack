package org.easy;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class App {

	public static void main(String[] args) {
		File dir = new File("Azad");
		dir.mkdir();
		dir = new File("Azad\\radhe.txt");
		try {
			BufferedWriter bw = new BufferedWriter(new FileWriter(dir));

			bw.write("Azad");
			bw.write("Ankit");
			bw.write("Aishwarya");
			bw.write("Bharati");
			bw.write("Bhagabat");

			System.out.println("Writing onto the file is completed!!");
		} catch (IOException e) {
			System.out.println("Unfortunately file is not created");
		}

	}

}
